<h1><%= @todo_list.title %></h1>

<table class="todo_items">
  <% @todo_list.todo_items.each do |todo_item| %>
  <tr>
    <td><%= todo_item.content %></td>
    <td>
      <% unless todo_item.completed?%>
        <%= todo_item.completed_at %>
      <% else %>
        <%= link_to "Complete", complete_todo_list_todo_item_path(todo_item), method: :patch%>
      <% end %>
        <%= link_to "Edit", edit_todo_list_todo_item_path(todo_item) %>
        <%= link_to 'Destroy', todo_list_todo_item_path(todo_item), method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>

  </tr>
  <% end %>
</table>

<p>
  <%= link_to "New Todo Item", new_todo_list_todo_item_path %>
</p>
